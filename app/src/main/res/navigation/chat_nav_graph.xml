<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chat_nav_graph"
    app:startDestination="@id/chatListFragment">
    <fragment
        android:id="@+id/chatListFragment"
        android:name="com.chatapplication.ui.feature.chat.fragment.ChatListFragment"
        android:label="fragment_chats"
        tools:layout="@layout/fragment_chat_list" >
        <action
            android:id="@+id/action_chatListFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
    </fragment>
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.chatapplication.ui.feature.chat.fragment.ChatFragment"
        android:label="fragment_chat"
        tools:layout="@layout/fragment_chat">
        <argument
            android:name="chatId"
            app:argType="string" />
        <argument
            android:name="contactName"
            app:argType="string"
            app:nullable="true"/>
        <argument
            android:name="contactPhoneNumber"
            app:argType="string"
            app:nullable="true" />
    </fragment>
</navigation>